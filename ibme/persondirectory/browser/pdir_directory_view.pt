<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ibme.persondirectory">
<body>

  <metal:content-title fill-slot="content-title">
    <metal:content-title define-macro="content-title">
      <h1 class="documentFirstHeading" tal:content="view/getTitle" />
      <p class="documentDescription" tal:content="context/Description" />
    </metal:content-title>
  </metal:content-title>

  <metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

      <ul class="persondirectory-listing"><!--
        --><li tal:repeat="entry view/entryListing">
          <tal:t tal:define="ob entry/getObject"
               tal:content="structure ob/@@fragment" />
        </li><!--
      --></ul>

    </metal:content-core>
  </metal:content-core>

  <metal:main fill-slot="column_two_slot">
    <metal:column_two_slot define-macro="column_two_slot">
      <div id="portal-column-two" class="cell width-1:4 position-3:4">

      <dl class="persondirectory-filters"
          tal:define="filters view/uniqueFilterEntries">
        <dd><a tal:attributes="href context/absolute_url">Show all</a></dd>
        <tal:t tal:repeat="filter_id filters/keys">
          <dt tal:define="filter_title python:view.getEntryFieldTitle(filter_id)"
              tal:content="string:Filter by ${filter_title}">Filter by...</dt>
          <tal:t tal:repeat="filter_value python:filters[filter_id]">
            <dd tal:attributes="class python:'selected' if request.get(filter_id, None) == filter_value else '';">
              <a tal:attributes="href python:view.generateFilterUrl(filter_id, filter_value)"
                 tal:content="filter_value">Filter</a>
            </dd>
          </tal:t>
        </tal:t>
      </dl>

      </div>
    </metal:column_two_slot>
  </metal:main>

</body>
</html>
